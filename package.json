{
  "author": "Beto Muniz <contato@betomuniz.com>",
  "name": "chrts",
  "version": "1.0.0",
  "description": "Minimalist charts as Web Components using SVG, CSS, and TypeScript.",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "keywords": [
    "web-component",
    "bar-chart",
    "pie-chart",
    "gauge-chart",
    "svg"
  ],
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "release-it": "^15.10.0",
    "typescript": "^5.0.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "Release v${version}"
    },
    "github": {
      "release": true,
      "web": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "docs/CHANGELOG.md",
        "header": "# Changelog",
        "preset": {
          "name": "conventionalcommits"
        }
      }
    }
  }
}
